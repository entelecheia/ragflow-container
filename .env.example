# ------------------------------
# General Configuration
# ------------------------------
# The type of doc engine to use: 'elasticsearch' (default) or 'infinity'
DOC_ENGINE=${DOC_ENGINE:-elasticsearch}
# Docker compose profiles based on doc engine type
COMPOSE_PROFILES=${DOC_ENGINE}

# ------------------------------
# Workspace Paths
# ------------------------------
# Base workspace directory
WORKSPACE_DIR=${WORKSPACE_DIR:-./workspace}
# Directory for configuration files (infinity_conf.toml, init.sql)
CONFIG_DIR=${WORKSPACE_DIR}/config
# Directory for application logs
LOGS_DIR=${WORKSPACE_DIR}/logs
# Directory for nginx configurations
NGINX_DIR=${WORKSPACE_DIR}/nginx

# ------------------------------
# Port Configuration
# ------------------------------
# RAGFlow Server
SVR_HTTP_PORT=9380
SVR_HTTP_PORT_80=80
SVR_HTTPS_PORT=443

# Elasticsearch
ES_PORT=9200

# Infinity
INFINITY_THRIFT_PORT=23817
INFINITY_HTTP_PORT=23820
INFINITY_PSQL_PORT=5432

# MySQL
MYSQL_PORT=3306

# MinIO
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# ------------------------------
# Service Configuration
# ------------------------------
# Elasticsearch
ES_HOST=es01
ELASTIC_PASSWORD=infini_rag_flow
STACK_VERSION=8.11.3

# Infinity
INFINITY_HOST=infinity

# MySQL
MYSQL_HOST=mysql
MYSQL_DBNAME=rag_flow
MYSQL_PASSWORD=infini_rag_flow

# MinIO
MINIO_HOST=minio
MINIO_USER=rag_flow
MINIO_PASSWORD=infini_rag_flow

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=infini_rag_flow

# Kibana
KIBANA_PORT=6601
KIBANA_USER=rag_flow
KIBANA_PASSWORD=infini_rag_flow

# ------------------------------
# Resource Limits
# ------------------------------
# Maximum memory limit for containers (8GB)
MEM_LIMIT=8073741824

# ------------------------------
# RAGFlow Configuration
# ------------------------------
# Docker image configuration
# Default: slim edition without embedding models
RAGFLOW_IMAGE=infiniflow/ragflow:v0.15.1-slim
# Full edition with embedding models:
# RAGFLOW_IMAGE=infiniflow/ragflow:v0.15.1

# Timezone
TIMEZONE='Asia/Seoul'

# HuggingFace endpoint (optional)
# HF_ENDPOINT=https://hf-mirror.com

# macOS specific configuration
# MACOS=1

# ------------------------------
# Logging Configuration
# ------------------------------
# Log level for RAGFlow packages (DEBUG, INFO, WARNING)
# Example: LOG_LEVELS=ragflow.es_conn=DEBUG
# LOG_LEVELS=ragflow.es_conn=DEBUG
